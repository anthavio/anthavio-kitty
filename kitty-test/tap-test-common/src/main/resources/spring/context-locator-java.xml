<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="kitty-lib" class="com.anthavio.spring.AnnotationConfigHierarchyFactory" 
		lazy-init="true">
		<constructor-arg>
			<list>
				<value>com.anthavio.tap.test.SpringKittyConfig</value>
			</list>
		</constructor-arg>
		<constructor-arg>
			<ref bean="tap-dbmodel"/>
		</constructor-arg>
	</bean>

	<bean id="tap-platform" class="org.springframework.context.annotation.AnnotationConfigApplicationContext" 
		lazy-init="true">
		<constructor-arg >
			<array value-type="java.lang.Class">
				<value>com.anthavio.tap.test.SpringPlatformConfig</value>
			</array>
		</constructor-arg>
	</bean>

</beans>
