<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

	<bean id="tap-dbmodel" class="com.anthavio.spring.AnnotationConfigHierarchyFactory" 
		lazy-init="true">
		<constructor-arg>
			<list>
				<value>com.anthavio.tap.db.SpringConfig</value>
			</list>
		</constructor-arg>
		<constructor-arg>
			<ref bean="tap-platform"/>
		</constructor-arg>
	</bean>
	
	<bean id="tap-services" class="com.anthavio.spring.AnnotationConfigHierarchyFactory" 
		lazy-init="true">
		<constructor-arg>
			<list>
				<value>com.anthavio.tap.svc.SpringConfig</value>
			</list>
		</constructor-arg>
		<constructor-arg>
			<ref bean="tap-dbmodel"/>
		</constructor-arg>
	</bean>

</beans>
